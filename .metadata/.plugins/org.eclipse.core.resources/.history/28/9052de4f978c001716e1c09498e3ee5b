package adri.logviewermain.action;

import org.springframework.context.ConfigurableApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import adri.logviewermain.service.UtilisateurService;

public class DetailAction extends BaseAction{
	private Class<? extends BaseModel> detail;
	
	public String getDetails(){
		ConfigurableApplicationContext context = null;
		try{
			context = new ClassPathXmlApplicationContext("list-beans.xml");
			setPagination(UtilisateurService.getInstance(context).findAllByBaseModel(getItem(), , getPage()));
			return SUCCESS;
		}catch(NullPointerException e){
			return NONE;
		}catch(Exception e){
			e.printStackTrace();
			setException(e);
			return ERROR;
		}finally {
			if(context != null){
				context.close();
			}
		}
	}
	
	public Class<? extends BaseModel> getDetail() {
		return detail;
	}
	public void setDetail(String detail) {
		this.detail = detail;
	}
}
