<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
       "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
  <field name="item.email">
      <field-validator type="required" short-circuit="true">
          <message>Une adresse email est requise.</message>
      </field-validator>
      <field-validator type="email" short-circuit="true">
          <message>Adresse email invalide.</message>
      </field-validator>
  </field>
  <field name="item.nom">
     <field-validator type="required">
          <message>Un nom est requis.</message>
      </field-validator>
  </field>
  <field name="item.password">
     <field-validator type="requiredstring">
          <message>Un mot de passe est requis.</message>
      </field-validator>
  </field>
  <field name="item.port">
     <field-validator type="required">
          <message>Le port de l'agent est requis.</message>
      </field-validator>
     <field-validator type="number">
          <message>Le port de l'agent est uniquement composé de chiffres.</message>
      </field-validator>
  </field>
  <field name="item.adresse">
     <field-validator type="required">
          <message>L'adresse de l'agent est requise.</message>
      </field-validator>
  </field>
  
  <validator type="expression">
      <param name="expression">item.password.equals(item.confirm)</param>
      <message>Le mot de passe de confirmation ne correspond pas au mot de passe entré</message>
  </validator>
</validators>