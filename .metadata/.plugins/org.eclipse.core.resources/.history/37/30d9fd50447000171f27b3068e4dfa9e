var profilId = document.getElementById('item.profil.id');
$(document).ready(function(){
    $("#groupeSelect").on("change", function () {
        var groupe = $(this).val();
        $.ajax({
            url : url.value+'/Includes/SelectProfil',
            type : 'GET',
            data : 'groupe.id=' + groupe ,
            success : function(html, statut){
                if(html){
                    $('#profilSelect').html(html);
                }
            },
            error : function(resultat, statut, erreur){
            }
        });
    });

    $("a.confirmDelete").on("click", function () {
        var item = $(this).attr('data-item');
        var id = $(this).attr('data-id');
        $.ajax({
            url : url.value+'/Includes/deleteConfirm/'+item,
            type : 'GET',
            data : 'item.id=' + id,
            success : function(html, statut){
                if(html){
                    $('#delete').html(html);
                }else{
                    $('#delete').load(url+'/Includes/Loader');
                }
            },
            error : function(resultat, statut, erreur){
            }
        });
    });
	$.ajax({
        url : url.value+'/Includes/SelectProfil',
        type : 'GET',
        data : 'groupe.id=' + $("#groupeSelect").val() + '&item.id=' + profilId.value ,
        success : function(html, statut){
            if(html){
                $('#profilSelect').html(html);
            }else{
                $('#details .modal-body').load('Waiter');
            }
        },
        error : function(resultat, statut, erreur){
        }
    });
});

