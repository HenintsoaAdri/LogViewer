$(document).ready(function(){
    $(".confirmDelete").on("click", function () {
        var groupe = $(this).val();
        $.ajax({
            url : url+'/Includes/deleteConfirm/'+item,
            type : 'GET',
            data : 'item.id=' + groupe ,
            success : function(html, statut){
                if(html){
                    $('#profilSelect').html(html);
                }
            },
            error : function(resultat, statut, erreur){
            }
        });
    });
});